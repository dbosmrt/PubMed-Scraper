# =============================================================================
# PubMed Scraper - Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=pubmed-scraper
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# -----------------------------------------------------------------------------
# Database - MongoDB
# -----------------------------------------------------------------------------
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=pubmed_scraper

# -----------------------------------------------------------------------------
# Cache & Queue - Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# -----------------------------------------------------------------------------
# File Storage - S3/MinIO
# -----------------------------------------------------------------------------
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=pubmed-papers
S3_REGION=us-east-1

# -----------------------------------------------------------------------------
# External API Keys (Optional - for higher rate limits)
# -----------------------------------------------------------------------------
PUBMED_API_KEY=
NCBI_EMAIL=your-email@example.com

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_PUBMED=3  # requests per second
RATE_LIMIT_ARXIV=1
RATE_LIMIT_BIORXIV=2

# -----------------------------------------------------------------------------
# Worker Configuration
# -----------------------------------------------------------------------------
CELERY_CONCURRENCY=4
MAX_RETRIES=3
RETRY_DELAY=5
